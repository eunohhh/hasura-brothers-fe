#!/bin/sh

export NVM_DIR="$HOME/.nvm"
if [ -s "$NVM_DIR/nvm.sh" ]; then
  . "$NVM_DIR/nvm.sh"
  if [ -f ".nvmrc" ]; then
    nvm use --silent >/dev/null
  else
    nvm use default --silent >/dev/null 2>&1 || true
  fi
fi

export PATH="$HOME/Library/pnpm:$HOME/.local/share/pnpm:/opt/homebrew/bin:$PATH"

if ! command -v pnpm >/dev/null 2>&1; then
  echo "pnpm not found; install pnpm or adjust PATH" >&2
  exit 127
fi

pnpm lint
